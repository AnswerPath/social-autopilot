{
  "models": {
    "main": {
      "provider": "anthropic",
      "modelId": "claude-3-7-sonnet-20250219",
      "maxTokens": 120000,
      "temperature": 0.2
    },
    "research": {
      "provider": "perplexity",
      "modelId": "sonar-pro",
      "maxTokens": 8700,
      "temperature": 0.1
    },
    "fallback": {
      "provider": "anthropic",
      "modelId": "claude-3-7-sonnet-20250219",
      "maxTokens": 120000,
      "temperature": 0.2
    }
  },
  "global": {
    "logLevel": "info",
    "debug": false,
    "defaultNumTasks": 10,
    "defaultSubtasks": 5,
    "defaultPriority": "medium",
    "projectName": "Taskmaster",
    "ollamaBaseURL": "http://localhost:11434/api",
    "bedrockBaseURL": "https://bedrock.us-east-1.amazonaws.com",
    "responseLanguage": "English",
    "defaultTag": "master",
    "azureOpenaiBaseURL": "https://your-endpoint.openai.azure.com/",
    "userId": "1234567890"
  },
  "context": {
    "max_tokens_per_message": 300,
    "summarize_on_completion": true,
    "summarization_prompt": "Summarize the completed subtask in <= 300 tokens. Do not include full code or documents. Instead, reference committed file paths and describe changes at a high level."
  },
  "output": {
    "inline_code": false,
    "file_references": true,
    "progress_tracker_mode": "file_only",
    "progress_tracker_path": "docs/taskmaster_progress.md"
  },
  "verbosity": {
    "exploration_logs": false,
    "status_updates": "compact"
  },
  "tasks": {
    "parse_prd": {
      "split_into_subtasks": true,
      "subtask_context_limit": 300,
      "subtask_isolation": true
    }
  },
  "claudeCode": {}
}
